<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/size_five"
    android:minHeight="?attr/actionBarSize"
    app:theme="@style/ToolbarStyle">
    <!--  android:theme="@style/Theme.AppCompat"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TitleToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginLeft="-10dp"
            android:layout_weight="2"

            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="Sign in"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_twenty_two" />
        <ImageView
            android:id="@+id/dropdown_click"
            android:layout_width="@dimen/size_fourty"

            android:layout_height="wrap_content"
           android:padding="@dimen/size_five"
            android:text="SHOW POPUP"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/drop_down"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_five"
            android:text="Credit:0.0"
            android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
            android:id="@+id/credit"
            android:layout_marginRight="@dimen/size_five"
            android:gravity="center"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/size_seven"
            android:src="@drawable/drop_down"
            android:visibility="gone"
android:textSize="@dimen/text_size_fifteen"
            android:textColor="#fff"
              />


        <!--   <ImageView
               android:id="@+id/playall"
               android:layout_width="@dimen/size_fifty_five"
               android:layout_height="match_parent"
               android:layout_gravity="right"



               android:padding="@dimen/size_fifteen"

               android:visibility="invisible" />-->
    </RelativeLayout>
</android.support.v7.widget.Toolbar>
