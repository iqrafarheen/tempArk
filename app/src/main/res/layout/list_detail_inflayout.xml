<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_twenty"
    android:layout_marginRight="@dimen/size_twenty"
    android:layout_marginTop="@dimen/size_twenty_eight"
    android:background="@drawable/timer_selector"
    android:elevation="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_ten"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/size_fifty"
                android:layout_height="@dimen/size_fifty"
                android:layout_marginLeft="@dimen/size_ten"

                android:padding="@dimen/size_three"
                android:src="@drawable/dell" />

            <TextView
                android:id="@+id/comp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_twelve"
                android:maxLines="3"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_twenty"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/mob_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_twelve"
                android:maxLines="3"
                android:text="Contact Number"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/size_three"
                android:textSize="@dimen/text_size_sixteen"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/size_fifteen"
            android:layout_weight="1"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right|center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/disablity"
                    android:layout_width="@dimen/size_fifty"
                    android:layout_height="@dimen/size_fifty"
                    android:layout_gravity="right|center"
                    android:layout_marginTop="@dimen/size_five"
                    android:visibility="gone"
                    android:src="@drawable/preffer_badge_2" />
                <ImageView
                    android:id="@+id/nonphysical_disablity"
                    android:layout_width="@dimen/size_fifty"
                    android:layout_height="@dimen/size_fifty"
                    android:layout_gravity="right|center"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/size_twelve"
                    android:layout_marginTop="@dimen/size_five"
                    android:src="@drawable/preffer_badge_2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stars"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_thirty_five"
                android:layout_marginTop="@dimen/size_five"
                android:gravity="right"
                android:orientation="horizontal">

                <RatingBar

                    android:id="@+id/ratingbar"

                    style="?attr/ratingBarStyleSmall"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="5.0"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:stepSize="1.5"
                    app:theme="@style/RatingBar" />

                <TextView
                    android:id="@+id/rate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_thirty_five"

                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_ten"
                    android:gravity="center"
                    android:paddingLeft="@dimen/size_ten"
                    android:text="5.0"

                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/size_ten"
                android:gravity="right"
                android:text="100 Reviews"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_one"
        android:layout_marginLeft="@dimen/size_fifteen"
        android:layout_marginRight="@dimen/size_fifteen"
        android:layout_marginTop="@dimen/size_ten"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">


    </LinearLayout>

    <TextView
        android:id="@+id/hire_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/size_fifteen"
        android:layout_marginTop="@dimen/size_ten"
        android:gravity="center"
        android:text="Award Job"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_twenty" />


</LinearLayout>
